<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ClinicaLilian</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link rel="stylesheet" href="~/lib/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/lib/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css">
    <link rel="stylesheet" href="~/lib/icheck-bootstrap/icheck-bootstrap.min.css">
    <link rel="stylesheet" href="~/lib/jqvmap/jqvmap.min.css">
    <link rel="stylesheet" href="~/css/adminlte.min.css">
    <link rel="stylesheet" href="~/lib/overlayScrollbars/css/OverlayScrollbars.min.css">
    <link rel="stylesheet" href="~/lib/daterangepicker/daterangepicker.css">
    <link rel="stylesheet" href="~/lib/summernote/summernote-bs4.min.css">
    <link rel="stylesheet" href="~/ClinicaLilian.styles.css" asp-append-version="true">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="~/lib/jquery-ui/jquery-ui.min.js"></script>
    <script>
        $.widget.bridge('uibutton', $.ui.button)
    </script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/chart.js/Chart.min.js"></script>
    <script src="~/lib/sparklines/sparkline.js"></script>
    <script src="~/lib/jqvmap/jquery.vmap.min.js"></script>
    <script src="~/lib/jqvmap/maps/jquery.vmap.usa.js"></script>
    <script src="~/lib/jquery-knob/jquery.knob.min.js"></script>
    <script src="~/lib/moment/moment.min.js"></script>
    <script src="~/lib/daterangepicker/daterangepicker.js"></script>
    <script src="~/lib/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>
    <script src="~/lib/summernote/summernote-bs4.min.js"></script>
    <script src="~/lib/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <script src="~/js/adminlte.js"></script>
    <script src="~/js/pages/dashboard.js"></script>
    @RenderSection("scripts", required: false)
    <style>
        .user-name {
            color: white;
        }
    </style>
</head>
<body class="hold-transition dark-mode sidebar-mini layout-fixed layout-navbar-fixed layout-footer-fixed">
    <div class="wrapper">
        <header class="main-header navbar navbar-expand navbar-dark">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i> </a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <!-- Add any right navbar links here -->
            </ul>
        </header>
        <aside class="main-sidebar sidebar-dark-primary elevation-4">

            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="image">
                    <i class="fas fa-user-circle fa-2x user-icon"></i>
                </div>
                <div class="info">
                    <a href="#" class="d-block user-name text-white">Dr. Lilian Fonseca </a>
                </div>
            </div>

            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                    <li class="nav-item">
                        <a href="#" class="nav-link">
                            <i class="nav-icon fas fa-book"></i>
                            <p>
                                Cadastros
                                <i class="fas fa-angle-left right"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a href="@Url.Action("Index", "Pacientes")" class="nav-link">
                                    <i class="far fa-circle nav-icon fas fa-user"></i>
                                    <p>Paciente</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="@Url.Action("Index", "Funcionarios")" class="nav-link">
                                    <i class="far fa-circle nav-icon fas fa-user-tie"></i>
                                    <p>Funcionário</p>
                                </a>
                            </li>
                        </ul>

                    </li>
                    <!-- ... Outros itens do menu ... -->
                    <li class="nav-item">
                        <a href="#" class="nav-link">
                            <i class="nav-icon fas fa-calendar-alt"></i>
                            <p>
                                Agenda
                                <i class="right fas fa-angle-left"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a href="@Url.Action("Index", "Agenda")" class="nav-link">
                                    <i class="nav-icon far fa-calendar-check"></i>
                                    <p>Agendamentos</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="@Url.Action("Index", "Reagendamentos")" class="nav-link">
                                    <i class="nav-icon fas fa-calendar-day"></i>
                                    <p>Reagendamentos</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="@Url.Action("Index", "Cancelamentos")" class="nav-link">
                                    <i class="nav-icon fas fa-calendar-times"></i>
                                    <p>Cancelamentos</p>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <!-- ... Outros itens do menu ... -->
                </ul>
            </nav>
        </aside>
        <div class="content-wrapper">
            <div class="content-header">
                <div class="container-fluid">
                    <!-- Add any content header elements here -->
                </div>
            </div>
            <section class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </section>
        </div>
        <footer class="main-footer">
            <!-- Add any footer content here -->
        </footer>
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Add any control sidebar content here -->
        </aside>
    </div>

